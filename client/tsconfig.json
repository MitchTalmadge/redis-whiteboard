{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "sourceRoot": "src",
    "inlineSourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "webpack.ts",
    "src/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}